GET         /Buy/InProgressOrders                            controllers.BuyController.InProgressOrders()
GET         /Buy/EarlierOrders                               controllers.BuyController.EarlierOrders()

POST        /Category/GetCategoryListJson                    controllers.CategoryController.GetCategoryListJson()
POST        /Category                                        controllers.CategoryController.Index_Paging()
POST        /Category/Index                                  controllers.CategoryController.Index_Paging()
GET         /Category                                        controllers.CategoryController.Index(friendlyUrl: String, pageNumber: Int ?= 1)
GET         /Category/Index                                  controllers.CategoryController.Index(friendlyUrl: String, pageNumber: Int ?= 1)

GET         /Error                                           controllers.ErrorController.Index(httpErrorCode: Integer ?= null)
GET         /Error/Index                                     controllers.ErrorController.Index(httpErrorCode: Integer ?= null)

GET         /                                                controllers.HomeController.Index()

GET         /Product/Details                                 controllers.ProductController.Details(friendlyUrl: String, productId: Int ?= -1, pageNumber: Int ?= 1)
POST        /Product/Details                                 controllers.ProductController.Details_Paging()
GET         /Product/Highlighteds                            controllers.ProductController.Highlighteds(pageNumber: Int ?= 1)
POST        /Product/Highlighteds                            controllers.ProductController.Highlighteds_Paging()
GET         /Product/Newests                                 controllers.ProductController.Newests(pageNumber: Int ?= 1)
POST        /Product/Newests                                 controllers.ProductController.Newests_Paging()
GET         /Product/Users                                   controllers.ProductController.Users(friendlyUrl: String, pageNumber: Int ?= 1)
POST        /Product/Users                                   controllers.ProductController.Users_Paging()

GET         /Profile/Edit                                    controllers.ProfileController.Edit()
