POST        /Profile/CheckEmailUnique                        controllers.ProfileController.CheckEmailUnique()
GET         /Profile/Addresses                               controllers.ProfileController.Addresses()
GET         /Profile/AddressesToOrder                        controllers.ProfileController.AddressesToOrder(userOrderId: Int, isCustomer: Boolean, ordersOldAddressId: Integer ?= null)
GET         /Profile/CreateAddress                           controllers.ProfileController.CreateAddress()
POST        /Profile/CreateAddress                           controllers.ProfileController.CreateAddress_POST()
POST        /Profile/EditAddress                             controllers.ProfileController.EditAddress()
POST        /Profile/DeleteAddress                           controllers.ProfileController.DeleteAddress()
POST        /Profile/MakeAddressDefault                      controllers.ProfileController.MakeAddressDefault()
POST        /Profile/MakeOrdersAddress                       controllers.ProfileController.MakeOrdersAddress()
GET         /Profile/Group                                   controllers.ProfileController.Group()
POST        /Profile/LevelUp                                 controllers.ProfileController.LevelUp()
GET         /UserProfile/Comments                            controllers.ProfileController.Comments()
