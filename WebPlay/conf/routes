###########################################################################
# Map static resources from the /public folder to the /assets URL path
###########################################################################

GET         /css/local/*file                                 controllers.Assets.at(path="/public/stylesheets", file)
GET         /css/*file                                       controllers.Assets.at(path="/public/stylesheets/shared", file)
GET         /js/*file                                        controllers.Assets.at(path="/public/javascripts", file)
GET         /img/*file                                       controllers.Assets.at(path="/public/images", file)