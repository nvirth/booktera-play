# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /Account/Login                                   controllers.AccountController.Login(returnUrl: String ?= "/")
POST        /Account/Login                                   controllers.AccountController.Login_POST(returnUrl: String ?= "/")
POST        /Account/LogOff                                  controllers.AccountController.LogOff()
GET         /Account/Register                                controllers.AccountController.Register()
POST        /Account/Register                                controllers.AccountController.Register_POST()
GET         /Account/RegisterSuccess                         controllers.AccountController.RegisterSuccess()
